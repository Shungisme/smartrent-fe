# =================================
# API Configuration
# =================================

# Base URL for the main API
NEXT_PUBLIC_URL_API_BASE=http://localhost:8080/

# =================================
# Environment Configuration
# =================================

# Node environment
NODE_ENV=development

# =================================
# API Configuration
# =================================

# API request timeout in milliseconds (default: 30000)
NEXT_PUBLIC_API_TIMEOUT=30000

# =================================
# Cookie Configuration
# =================================

# Cookie names for authentication
NEXT_PUBLIC_ACCESS_TOKEN_COOKIE=access_token
NEXT_PUBLIC_REFRESH_TOKEN_COOKIE=refresh_token

# Cookie expiration in days
NEXT_PUBLIC_ACCESS_TOKEN_EXPIRES=7
NEXT_PUBLIC_REFRESH_TOKEN_EXPIRES=30

# Cookie security settings (true/false)
NEXT_PUBLIC_COOKIE_SECURE=true
NEXT_PUBLIC_COOKIE_SAME_SITE=strict

# Cookie domain (leave empty for current domain)
NEXT_PUBLIC_COOKIE_DOMAIN=

# =================================
# Application Configuration
# =================================

# Base path for the application (leave empty if app is at root)
NEXT_PUBLIC_BASE_PATH=

# Default image path
NEXT_PUBLIC_DEFAULT_IMAGE=/images/default-image.jpg

# Application locale (vi, en)
NEXT_PUBLIC_DEFAULT_LOCALE=vi

# =================================
# Feature Flags
# =================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false