+
+  const changePassword = useCallback(
+    async (currentPassword: string, newPassword: string) => {
+      try {
+        setLoading(true)
+        setError(null)
+
+        const success = await AuthService.changePassword({
+          currentPassword,
+          newPassword,
+        })
+
+        if (success) {
